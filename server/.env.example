PORT=4000
NODE_ENV=development
# Example MongoDB (Atlas) connection string. Replace <user>, <password>, <cluster-url>.
# Make sure the database name at the end is `oneToSevenMedia` as requested.
# Example:
# MONGO_URI=mongodb+srv://<user>:<password>@<cluster-url>/oneToSevenMedia?retryWrites=true&w=majority
MONGO_URI=
REDIS_URL=
CLOUDINARY_URL=

# JWT, refresh and security
JWT_SECRET=
REFRESH_TOKEN_DAYS=7
ACCESS_TOKEN_EXPIRES=1h

# One-time header secret to bootstrap super-admin via POST /api/admins/create-super
SUPER_ADMIN_INIT=
